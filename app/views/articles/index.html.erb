<h1>Articles:</h1>

<div class="card d-flex bg-transparent">
  <ul>
    <% @articles.each do |article| %>
      <div class="card-body">
        <h2 class="card-title"><%= link_to article.title.capitalize, article_path(article) %></h2>
        <p class="card-text"><%= article.content %></p>
      </div>
    <% end %>
  </ul>
</div>
